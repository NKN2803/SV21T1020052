@model SV21T1020052.DomainModels.Customer

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <img src="/themes/dist/img/avatar-default.png" alt="Avatar" class="profile-avatar">
            <h2 class="profile-title">Thông tin cá nhân</h2>
        </div>
        <div class="profile-info">
            <p><strong>Tên khách hàng:</strong> @Model.CustomerName</p>
            <p><strong>Tên liên hệ:</strong> @Model.ContactName</p>
            <p><strong>Tỉnh:</strong> @Model.Province</p>
            <p><strong>Địa chỉ:</strong> @Model.Address</p>
            <p><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 150px); /* trừ chiều cao header */
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 500px;
        padding: 30px;
        text-align: center;
    }

    .profile-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-bottom: 10px;
        border: 3px solid #007bff;
        object-fit: cover;
    }

    .profile-title {
        font-size: 26px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .profile-info {
        text-align: left;
    }

        .profile-info p {
            font-size: 16px;
            color: #555;
            margin: 12px 0;
            padding: 8px;
            border-radius: 6px;
        }

            .profile-info p:nth-child(odd) {
                background: #f9f9f9;
            }

        .profile-info strong {
            color: #222;
            font-weight: 600;
            margin-right: 5px;
        }
</style>
