<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop NKN </title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>

<body class="bg-light">

    <!-- Header -->
    @await Html.PartialAsync("_Header")

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-xl py-5">
            <div class="row">
                @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Products")
                {
                    <!-- Sidebar - chỉ hiển thị trong trang Products -->
                    <div class="col-lg-3 col-md-4">
                        @await Html.PartialAsync("_Sidebar")
                    </div>
                    <div class="col-lg-9 col-md-8">
                        @RenderBody()
                    </div>
                }
                else
                {
                    <!-- Các trang khác hiển thị full width -->
                    <div class="col-12">
                        @RenderBody()
                    </div>
                }
            </div>
        </div>
    </main>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $('.daterange-picker').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });
            $('.select2').select2({ width: "100%" });
            $('.pagination .disabled a, .pagination .active a').on('click', function (e) {
                e.preventDefault();
            });

            $('.datemask').inputmask('dd/mm/yyyy', { 'placeholder': '/__/__' });
            $('.number-separator').inputmask({
                alias: "numeric",
                groupSeparator: ",",       // Dấu phẩy phân cách phần nghìn
                autoGroup: true,           // Tự động thêm dấu phân cách
                digits: 0,                 // Không có chữ số thập phân
                removeMaskOnSubmit: true   // Loại bỏ ký tự phân cách phần nghìn khi submit form
            });
            $('[data-mask]').inputmask();
        });

        function doSearch(page) {
            const frmSearchInput = $("#frmSearchInput");

            $('html').scrollTop(0);

            $("#searchResult").html(`
                        <div class="d-flex align-items-center justify-content-center m-5">
                            <span class="spinner-grow text-primary mr-3" role="status"></span>
                            <span class="text-primary">Loading...</span>
                        </div>
                    `);

            let searchCondition = frmSearchInput.serializeArray();
            searchCondition.push({ name: "page", value: page });

            const action = frmSearchInput.prop("action");
            const method = frmSearchInput.prop("method");

            setTimeout(() => {
                $.ajax({
                    url: action,
                    type: method,
                    data: searchCondition,
                })
                    .done((data) => $("#searchResult").html(data));
            }, 200);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
</body>

</html>
<style>
    /* ===== Global ===== */
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        color: #333;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    img {
        max-width: 100%;
        border-radius: 6px;
    }

    /* ===== Header ===== */
    header {
        background: #212529;
        color: white;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        header .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #0d6efd;
            display: flex;
            align-items: center;
        }

            header .logo i {
                margin-right: 8px;
            }

        header .user-menu {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            header .user-menu a {
                color: white;
                font-size: 0.95rem;
            }

                header .user-menu a:hover {
                    color: #0d6efd;
                }

    /* ===== Sidebar ===== */
    .sidebar-container {
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .sidebar-section h3 {
        font-size: 1.2rem;
        margin-bottom: 15px;
        border-bottom: 2px solid #eee;
        padding-bottom: 5px;
        font-weight: 600;
    }

    .category-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .category-link {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        border-radius: 6px;
        color: #333;
        transition: all 0.3s;
    }

        .category-link:hover {
            background: #f1f1f1;
            color: #0d6efd;
        }

        .category-link.active {
            background: #0d6efd;
            color: #fff;
        }

    /* ===== Main Content ===== */
    .main-content {
        min-height: 80vh;
        padding: 20px 0;
    }

    /* ===== Search Box ===== */
    .search-box-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .search-form {
        display: flex;
        justify-content: center;
        max-width: 500px;
        margin: 0 auto;
        position: relative;
    }

        .search-form input {
            width: 100%;
            padding: 10px 45px 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .search-form button {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #666;
            font-size: 1.1rem;
            cursor: pointer;
        }

            .search-form button:hover {
                color: #0d6efd;
            }

    /* ===== Footer ===== */
    footer {
        background: #f1f1f1;
        text-align: center;
        padding: 20px 10px;
        margin-top: 40px;
        font-size: 0.9rem;
        color: #666;
    }

    /* ===== Product Card ===== */
    .product-card {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .product-info {
        padding: 10px;
        text-align: center;
    }

        .product-info h5 {
            font-size: 1rem;
            font-weight: 600;
            margin: 10px 0;
        }

        .product-info p {
            color: #0d6efd;
            font-weight: bold;
        }

    .add-to-cart {
        display: inline-block;
        margin-top: 8px;
        padding: 6px 12px;
        background: #0d6efd;
        color: #fff;
        border-radius: 5px;
        font-size: 0.9rem;
        transition: background 0.3s;
    }

        .add-to-cart:hover {
            background: #0b5ed7;
        }
</style>
