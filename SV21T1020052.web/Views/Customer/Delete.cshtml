@model Customer
@{
    ViewBag.Title = "Xóa khách hàng";
}
<div class="box box-danger">
    <div class="box-body">

        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static form-cotnrol">@Model.CustomerName</p>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static form-cotnrol">@Model.ContactName</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-cotnrol">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-cotnrol">@Model.Email</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-cotnrol">@Model.Address</p>
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <p class="form-control-static form-cotnrol">@Model.Province</p>
            </div>

            <div class="form-group">
                <label>Bị khóa?:</label>
                <p class="form-control-static form-cotnrol">
                    @(Model.IsLocked ? "Tài khoản đang  bị khóa" : "Tài khoản đang hoạt động")
                </p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1020052.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i>Xóa dữ liệu
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>


